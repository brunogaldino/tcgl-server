<div class="nested-fields">
  <div class="row">
    <div class="col-md-11">
      <div class="row">
        <div class="col-md-3">
          <div class="form-group">
            <%= f.input :linha_id, :collection => Linha.all.map { |e| [e.codigo_nome, e.id] }, :include_blank => false, :input_html => { :class => "form-control js-linha_select" } %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <%= f.input :dia_id, :as => :select, :input_html => { :class => "form-control js-dia_select" } %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <%= f.input :origem_id, :as => :select, :input_html => { :class => "form-control js-origem_select" } %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <%= f.input :destino_id, :as => :select, :input_html => { :class => "form-control js-destino_select" } %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-1">
      <%= link_to_remove_association "x", f, :class => 'btn btn-danger btn-block margin-top-25px' %>
    </div>
  </div>
</div>